DECLARE
 v_avg_age NUMBER(5,2);
BEGIN
 SELECT AVG(Age)
 INTO v_avg_age
 FROM Player;
 DBMS_OUTPUT.PUT_LINE('Average Age of Players = ' || v_avg_age);

